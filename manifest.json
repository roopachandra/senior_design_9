{
  "manifest_version": 2,

  "name": "Glimpse Extension",
  "description": "This extension will take a Glimpse at Political Issues",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "activeTab", 
   "storage"
   ],
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
}